// to find the perfect  number
# include <stdio.h>
void main()
{
int i, n,sum=0,t;
printf("Enter the number: ");
scanf ("%d",&n);
for( int i=1;i<=n;i++);
{
t = n % i;
if(t==0)

{
    sum=sum+i;
}
if (sum==n)
 printf ("the given number %d is a perfect number",n);
 else
 
 printf ("the given number %d is a not a perfect number",n);
}
}
____________________________________________________________________________
OUTPUT
      Enter the number: 7
      the given number 7 is a not a perfect number
